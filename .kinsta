# Install pnpm if pnpm-lock.yaml is found
if [ -f "pnpm-lock.yaml" ]; then
  echo "ğŸ“¦ pnpm-lock.yaml detected, installing pnpm and dependencies"
  curl -f https://get.pnpm.io/v6.16.js | node - add --global pnpm
  pnpm install
else
  echo "ğŸ“¦ No pnpm-lock.yaml found, using default npm install"
  npm install
fi

# Build the project
npm run build